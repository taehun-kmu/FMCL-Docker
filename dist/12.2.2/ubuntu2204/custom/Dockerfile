ARG IMAGE_NAME
FROM ${IMAGE_NAME}:12.2.2-runtime-ubuntu22.04 as base

ENV NV_CUDA_LIB_VERSION "12.2.2-1"

ARG CUDA_CUDART_DEV_VERSION=12.2.140-1
ARG NVML_DEV_VERSION=12.2.140-1
ARG LIBCUSPARSE_DEV_VERSION=12.1.2.141-1
ARG LIBNPP_DEV_VERSION=12.2.1.4-1
ARG LIBCUBLAS_DEV_VERSION=12.2.5.6-1
ARG LIBCUBLAS_DEV_PACKAGE_NAME=libcublas-dev-12-2
ARG CUDA_NSIGHT_COMPUTE_VERSION=12.2.2-1
ARG NVPROF_VERSION=12.2.142-1

FROM base as base-amd64

ENV NV_CUDA_CUDART_DEV_VERSION=${CUDA_CUDART_DEV_VERSION} \
    NV_NVML_DEV_VERSION=${NVML_DEV_VERSION} \
    NV_LIBCUSPARSE_DEV_VERSION=${LIBCUSPARSE_DEV_VERSION} \
    NV_LIBNPP_DEV_VERSION=${LIBNPP_DEV_VERSION} \
    NV_LIBNPP_DEV_PACKAGE=libnpp-dev-12-2=${LIBNPP_DEV_VERSION} \
    NV_LIBCUBLAS_DEV_VERSION=${LIBCUBLAS_DEV_VERSION} \
    NV_LIBCUBLAS_DEV_PACKAGE_NAME=${LIBCUBLAS_DEV_PACKAGE_NAME} \
    NV_LIBCUBLAS_DEV_PACKAGE=${LIBCUBLAS_DEV_PACKAGE_NAME}=${LIBCUBLAS_DEV_VERSION} \
    NV_CUDA_NSIGHT_COMPUTE_VERSION=${CUDA_NSIGHT_COMPUTE_VERSION} \
    NV_CUDA_NSIGHT_COMPUTE_DEV_PACKAGE=cuda-nsight-compute-12-2=${CUDA_NSIGHT_COMPUTE_VERSION} \
    NV_NVPROF_VERSION=${NVPROF_VERSION} \
    NV_NVPROF_DEV_PACKAGE=cuda-nvprof-12-2=${NVPROF_VERSION}

ENV NV_LIBNCCL_DEV_PACKAGE_NAME libnccl-dev
ENV NV_LIBNCCL_DEV_PACKAGE_VERSION 2.19.3-1
ENV NCCL_VERSION 2.19.3-1
ENV NV_LIBNCCL_DEV_PACKAGE ${NV_LIBNCCL_DEV_PACKAGE_NAME}=${NV_LIBNCCL_DEV_PACKAGE_VERSION}+cuda12.2


FROM base as base-arm64

ENV NV_CUDA_CUDART_DEV_VERSION 12.2.140-1
ENV NV_NVML_DEV_VERSION 12.2.140-1
ENV NV_LIBCUSPARSE_DEV_VERSION 12.1.2.141-1
ENV NV_LIBNPP_DEV_VERSION 12.2.1.4-1
ENV NV_LIBNPP_DEV_PACKAGE libnpp-dev-12-2=${NV_LIBNPP_DEV_VERSION}

ENV NV_LIBCUBLAS_DEV_PACKAGE_NAME libcublas-dev-12-2
ENV NV_LIBCUBLAS_DEV_VERSION 12.2.5.6-1
ENV NV_LIBCUBLAS_DEV_PACKAGE ${NV_LIBCUBLAS_DEV_PACKAGE_NAME}=${NV_LIBCUBLAS_DEV_VERSION}

ENV NV_CUDA_NSIGHT_COMPUTE_VERSION 12.2.2-1
ENV NV_CUDA_NSIGHT_COMPUTE_DEV_PACKAGE cuda-nsight-compute-12-2=${NV_CUDA_NSIGHT_COMPUTE_VERSION}

ENV NV_LIBNCCL_DEV_PACKAGE_NAME libnccl-dev
ENV NV_LIBNCCL_DEV_PACKAGE_VERSION 2.19.3-1
ENV NCCL_VERSION 2.19.3-1
ENV NV_LIBNCCL_DEV_PACKAGE ${NV_LIBNCCL_DEV_PACKAGE_NAME}=${NV_LIBNCCL_DEV_PACKAGE_VERSION}+cuda12.2


FROM base-${TARGETARCH}

ARG TARGETARCH

LABEL maintainer "NVIDIA CORPORATION <cudatools@nvidia.com>"

COPY KMU.crt /usr/local/share/ca-certificates/

RUN update-ca-certificates && \
    apt-get update && apt-get install -y --no-install-recommends \
    cuda-cudart-dev-12-2=${NV_CUDA_CUDART_DEV_VERSION} \
    cuda-command-line-tools-12-2=${NV_CUDA_LIB_VERSION} \
    cuda-minimal-build-12-2=${NV_CUDA_LIB_VERSION} \
    cuda-libraries-dev-12-2=${NV_CUDA_LIB_VERSION} \
    cuda-nvml-dev-12-2=${NV_NVML_DEV_VERSION} \
    ${NV_NVPROF_DEV_PACKAGE} \
    ${NV_LIBNPP_DEV_PACKAGE} \
    libcusparse-dev-12-2=${NV_LIBCUSPARSE_DEV_VERSION} \
    ${NV_LIBCUBLAS_DEV_PACKAGE} \
    ${NV_LIBNCCL_DEV_PACKAGE} \
    ${NV_CUDA_NSIGHT_COMPUTE_DEV_PACKAGE} \
    && rm -rf /var/lib/apt/lists/*

# Keep apt from auto upgrading the cublas and nccl packages. See https://gitlab.com/nvidia/container-images/cuda/-/issues/88
RUN apt-mark hold ${NV_LIBCUBLAS_DEV_PACKAGE_NAME} ${NV_LIBNCCL_DEV_PACKAGE_NAME}
ENV LIBRARY_PATH /usr/local/cuda/lib64/stubs
