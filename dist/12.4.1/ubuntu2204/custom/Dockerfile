ARG IMAGE_NAME
ARG SSH_PW

FROM ${IMAGE_NAME}:12.4.1-runtime-ubuntu22.04 as base

ENV TZ=Asia/Seoul \
    TERM=xterm-256color \
    NV_CUDA_LIB_VERSION="12.4.1-1"

FROM base as base-amd64

ARG CUDA_CUDART_DEV_VERSION=12.4.127-1
ARG NVML_DEV_VERSION=12.4.127-1
ARG LIBCUSPARSE_DEV_VERSION=12.3.1.170-1
ARG LIBNPP_DEV_VERSION=12.2.5.30-1
ARG LIBCUBLAS_DEV_VERSION=12.4.5.8-1
ARG LIBCUBLAS_DEV_PACKAGE_NAME=libcublas-dev-12-4
ARG CUDA_NSIGHT_COMPUTE_VERSION=12.4.1-1
ARG NVPROF_VERSION=12.4.127-1
ARG LIBNCCL_DEV_PACKAGE_NAME=libnccl-dev
ARG LIBNCCL_DEV_PACKAGE_VERSION=2.21.5-1
ARG NCCL_VERSION=2.21.5-1

ENV NV_CUDA_CUDART_DEV_VERSION=${CUDA_CUDART_DEV_VERSION} \
    NV_NVML_DEV_VERSION=${NVML_DEV_VERSION} \
    NV_LIBCUSPARSE_DEV_VERSION=${LIBCUSPARSE_DEV_VERSION} \
    NV_LIBNPP_DEV_VERSION=${LIBNPP_DEV_VERSION} \
    NV_LIBNPP_DEV_PACKAGE=libnpp-dev-12-4=${LIBNPP_DEV_VERSION} \
    NV_LIBCUBLAS_DEV_VERSION=${LIBCUBLAS_DEV_VERSION} \
    NV_LIBCUBLAS_DEV_PACKAGE_NAME=${LIBCUBLAS_DEV_PACKAGE_NAME} \
    NV_LIBCUBLAS_DEV_PACKAGE=${LIBCUBLAS_DEV_PACKAGE_NAME}=${LIBCUBLAS_DEV_VERSION} \
    NV_CUDA_NSIGHT_COMPUTE_VERSION=${CUDA_NSIGHT_COMPUTE_VERSION} \
    NV_CUDA_NSIGHT_COMPUTE_DEV_PACKAGE=cuda-nsight-compute-12-4=${CUDA_NSIGHT_COMPUTE_VERSION} \
    NV_NVPROF_VERSION=${NVPROF_VERSION} \
    NV_NVPROF_DEV_PACKAGE=cuda-nvprof-12-4=${NVPROF_VERSION} \
    NV_LIBNCCL_DEV_PACKAGE_NAME=${LIBNCCL_DEV_PACKAGE_NAME} \
    NV_LIBNCCL_DEV_PACKAGE_VERSION=${LIBNCCL_DEV_PACKAGE_VERSION} \
    NCCL_VERSION=${NCCL_VERSION} \
    NV_LIBNCCL_DEV_PACKAGE=${LIBNCCL_DEV_PACKAGE_NAME}=${LIBNCCL_DEV_PACKAGE_VERSION}+cuda12.4


FROM base as base-arm64

ENV NV_CUDA_CUDART_DEV_VERSION=${CUDA_CUDART_DEV_VERSION} \
    NV_NVML_DEV_VERSION=${NVML_DEV_VERSION} \
    NV_LIBCUSPARSE_DEV_VERSION=${LIBCUSPARSE_DEV_VERSION} \
    NV_LIBNPP_DEV_VERSION=${LIBNPP_DEV_VERSION} \
    NV_LIBNPP_DEV_PACKAGE=libnpp-dev-12-4=${LIBNPP_DEV_VERSION} \
    NV_LIBCUBLAS_DEV_PACKAGE_NAME=${LIBCUBLAS_DEV_PACKAGE_NAME} \
    NV_LIBCUBLAS_DEV_VERSION=${LIBCUBLAS_DEV_VERSION} \
    NV_LIBCUBLAS_DEV_PACKAGE=${LIBCUBLAS_DEV_PACKAGE_NAME}=${LIBCUBLAS_DEV_VERSION} \
    NV_CUDA_NSIGHT_COMPUTE_VERSION=${CUDA_NSIGHT_COMPUTE_VERSION} \
    NV_CUDA_NSIGHT_COMPUTE_DEV_PACKAGE=cuda-nsight-compute-12-4=${CUDA_NSIGHT_COMPUTE_VERSION} \
    NV_LIBNCCL_DEV_PACKAGE_NAME=${LIBNCCL_DEV_PACKAGE_NAME} \
    NV_LIBNCCL_DEV_PACKAGE_VERSION=${LIBNCCL_DEV_PACKAGE_VERSION} \
    NCCL_VERSION=${NCCL_VERSION} \
    NV_LIBNCCL_DEV_PACKAGE=${LIBNCCL_DEV_PACKAGE_NAME}=${LIBNCCL_DEV_PACKAGE_VERSION}+cuda12.4


FROM base-${TARGETARCH}

ARG TARGETARCH

LABEL maintainer "NVIDIA CORPORATION <cudatools@nvidia.com>"

COPY KMU.crt /usr/local/share/ca-certificates/

WORKDIR /root

RUN update-ca-certificates && \
    sed -i 's|http://archive.ubuntu.com|http://ubuntutym.u-toyama.ac.jp|g; s|http://security.ubuntu.com|http://ubuntutym.u-toyama.ac.jp|g' /etc/apt/sources.list && \
    apt-get update && apt-get install -y --no-install-recommends \
    nala \
    zsh \
    systemd \
    systemd-sysv \
    vim && \
    nala install -y --no-install-recommends \
    cuda-cudart-dev-12-4=${NV_CUDA_CUDART_DEV_VERSION} \
    cuda-command-line-tools-12-4=${NV_CUDA_LIB_VERSION} \
    cuda-minimal-build-12-4=${NV_CUDA_LIB_VERSION} \
    cuda-libraries-dev-12-4=${NV_CUDA_LIB_VERSION} \
    cuda-nvml-dev-12-4=${NV_NVML_DEV_VERSION} \
    ${NV_NVPROF_DEV_PACKAGE} \
    ${NV_LIBNPP_DEV_PACKAGE} \
    libcusparse-dev-12-4=${NV_LIBCUSPARSE_DEV_VERSION} \
    ${NV_LIBCUBLAS_DEV_PACKAGE} \
    ${NV_LIBNCCL_DEV_PACKAGE} \
    ${NV_CUDA_NSIGHT_COMPUTE_DEV_PACKAGE} && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* && \
    apt-mark hold ${NV_LIBCUBLAS_DEV_PACKAGE_NAME} ${NV_LIBNCCL_DEV_PACKAGE_NAME}

# Keep apt from auto upgrading the cublas and nccl packages. See https://gitlab.com/nvidia/container-images/cuda/-/issues/88
ENV LIBRARY_PATH /usr/local/cuda/lib64/stubs

RUN echo 'root:${SSH_PW}' | chpasswd

CMD ["/lib/systemd/systemd"]
